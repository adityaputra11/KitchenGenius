<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KitchenGenius" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_100</item>
        <item name="colorPrimaryVariant">@color/red_500</item>
        <item name="colorOnPrimary">@color/black_red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_300</item>
        <item name="colorOnSecondary">@color/black_red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/MyButtonStyle</item>
        <item name="android:textViewStyle">@style/MyTextStyle</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground_red</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/black</item>
        <item name="postSplashScreenTheme">@style/Theme.KitchenGenius</item>
    </style>
    <style name="MyButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_red_rounded</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="MyTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/hint_text_color_dark</item>
        <item name="boxStrokeColor">@color/stroke_color_dark</item>
        <item name="boxBackgroundColor">@color/background_color_dark</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="android:textColorHint">@color/hint_text_color_dark</item>
    </style>
</resources>